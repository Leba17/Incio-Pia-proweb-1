@model IEnumerable<Prueba002.Models.dbModels.DetalleCompra>

@{
    ViewData["Title"] = "Index";
}

<div class="Titulo">
    <h1>Detalles de Compras</h1>

    <p>
        <a asp-action="Create">Crear Nuevo Detalle De Compra</a>
    </p>
</div>


<table class="table table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                Cantidad
            </th>
            <th>
                Precio Del Producto
            </th>
            <th>
                Compra
            </th>
            <th>
                Producto
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrecioProducto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdCompraNavigation.IdCompra)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdProductoNavigation.NombreProducto)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.IdCompra , idp=item.IdProducto }) |
                    @Html.ActionLink("Details", "Details", new { id=item.IdCompra , idp=item.IdProducto }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.IdCompra , idp=item.IdProducto })
            </td>
        </tr>
}
    </tbody>
</table>

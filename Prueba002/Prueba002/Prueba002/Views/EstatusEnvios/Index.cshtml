@model IEnumerable<Prueba002.Models.dbModels.EstatusEnvio>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="~/css/estatusenvio.css">

<div class="container">
    <h1>Index</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Angregar nuevo estatus de envio</a>
    </p>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Estatus</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Estatus)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdEstatusEnvio" class="btn btn-info">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.IdEstatusEnvio" class="btn btn-success">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.IdEstatusEnvio" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
